# /etc/systemd/system/wmp.timer
# This file is part of the WakeMyPotato (WMP) systemd service.
# https://github.com/pablogila/WakeMyPotato

[Unit]
Description=WakeMyPotato: Restart the system after power outages

[Timer]
Unit=wmp.service
OnBootSec=0
OnCalendar=*-*-* *:00/01:00
Persistent=true

[Install]
WantedBy=timers.target
